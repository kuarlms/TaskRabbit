<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:background="@color/listBg"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout13"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingHorizontal="8dp"
                android:paddingVertical="10dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textView_adp_act_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView10"
                    android:layout_marginTop="5dp"
                    android:text="$ 00"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/red"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/imageView10"
                    android:layout_toRightOf="@+id/imageView10"
                    android:text="Michael"
                    android:layout_marginTop="10dp"
                    fontPath="fonts/Montserrat-SemiBold.ttf"
                    android:textColor="#ff5b61"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView43"
                    android:layout_alignStart="@+id/textView43"
                    android:layout_below="@+id/textView43"
                    android:text="for cleaning"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:textColor="#666666"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:layout_alignBottom="@+id/imageView10"
                    android:layout_alignLeft="@+id/textView44"
                    android:layout_alignStart="@+id/textView44"
                    android:text="(23 Jun - Flexible time)"
                    android:textColor="#898989"
                    android:visibility="gone"
                    android:textSize="12dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">

                    <Button

                        android:id="@+id/button13"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@color/red"
                        android:lines="2"
                        android:maxLines="2"
                        android:textSize="10dp"
                        android:text="00"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:background="@color/listBg"
                        android:text="Flexiable"
                        android:id="@+id/tv_thp_time"
                        android:gravity="center"
                        android:textColor="@color/Black_nb"/>


                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@id/imageView10"
                    android:padding="2dp"
                    android:visibility="visible"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_margin="2dp">
<FrameLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:layout_weight="1"></FrameLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:padding="0dp"
                        android:visibility="gone"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENTER TASk HOURS" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="00 hrs"
                            android:layout_margin="2dp"
                            android:inputType="numberDecimal"
                            android:id="@+id/et_active_task_hours"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button10_taskDone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayout13"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_button"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="8dp"
                        fontPath="fonts/Montserrat-SemiBold.ttf"
                        android:text="CANCEL"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:textColor="@color/red" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/textView_adp_act_cost"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"></FrameLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</LinearLayout>
