<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="20"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="4"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_nb_pro_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="7dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <TextView
                android:id="@+id/textView_nb_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Profile name"
                android:textColor="@color/Black_nb" />

        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:padding="15dp"
            android:textSize="@dimen/com_facebook_likeview_text_size"
            android:textColor="@color/Black_nb"/>

        <com.nex3z.notificationbadge.NotificationBadge
            android:id="@+id/notification_nb_inbox"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="@dimen/com_facebook_likeview_text_size"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical">

        </com.nex3z.notificationbadge.NotificationBadge>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/red">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_nb_active_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Active Task"
            android:textSize="@dimen/com_facebook_likeview_text_size"
            android:textColor="@color/Black_nb" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/cardview_dark_background"></FrameLayout>

        <TextView
            android:id="@+id/textView_nb_my_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="@dimen/com_facebook_likeview_text_size"
            android:text="My Account"
            android:textColor="@color/Black_nb" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/cardview_dark_background"></FrameLayout>

        <TextView
            android:id="@+id/textView_nb_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="@dimen/com_facebook_likeview_text_size"
            android:text="Sign Out"
            android:textColor="@color/Black_nb" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/cardview_dark_background"></FrameLayout>

    </LinearLayout>


</LinearLayout>
