<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f2f2"
   >

    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_normal"
        android:id="@+id/tb_task"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_sub"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/tb_task"
        android:layout_marginBottom="25dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="13dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Sub-Category"/>
        <Spinner
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_task"></Spinner>


    </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_below="@+id/ll_sub"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/linearLayout">

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_task_address"
            android:addStatesFromChildren="true">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp">


                <ImageView
                    android:id="@+id/imageViewta5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/address"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView15ta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageViewta5"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/imageViewta5"
                    android:layout_toRightOf="@+id/imageViewta5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="TASK ADDRESS" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_below="@id/textView15ta"
            android:layout_alignLeft="@+id/textView15ta"
            android:layout_alignStart="@+id/textView15ta"
            android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textView1x6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="What is the task location?"
                    android:layout_weight="18"
                    android:textSize="14dp" />

                    <ImageButton
                    android:id="@+id/buttonz12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_plus"
                    android:padding="3dp"
                    android:layout_weight="1.4"/>
        </LinearLayout>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_when"
            android:addStatesFromChildren="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/imageViewsz5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/when"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textViewwhen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageViewsz5"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/imageViewsz5"
                    android:layout_toRightOf="@+id/imageViewsz5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="WHEN" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="20"
                    android:orientation="horizontal"
                    android:layout_below="@id/textViewwhen"
                    android:layout_alignLeft="@+id/textViewwhen"
                    android:layout_alignStart="@+id/textViewwhen"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="Now or Later ?"
                        android:layout_weight="18"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/button1s"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_plus"
                        android:padding="3dp"
                        android:layout_weight="1.4"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_task"
            android:addStatesFromChildren="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/task"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="TASK DETAILS" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="20"
                    android:orientation="horizontal"
                    android:layout_below="@id/textView15"
                    android:layout_alignLeft="@+id/textView15"
                    android:layout_alignStart="@+id/textView15"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="What else we should know?"
                        android:layout_weight="18"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/button12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_plus"
                        android:padding="3dp"
                        android:layout_weight="1.4"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_vehice"
            android:addStatesFromChildren="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/imageViewvr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vehicle"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView15vr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageViewvr"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/imageViewvr"
                    android:layout_toRightOf="@+id/imageViewvr"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="VEHICLE REQUIREMENT" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="20"
                    android:orientation="horizontal"
                    android:layout_below="@id/textView15vr"
                    android:layout_alignLeft="@+id/textView15vr"
                    android:layout_alignStart="@+id/textView15vr"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/textView1zx6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="is Car or Truck required ?"
                        android:layout_weight="18"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/button1xz2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_plus"
                        android:padding="3dp"
                        android:layout_weight="1.4"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>



    <Button
        android:id="@+id/button_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/linearLayout"
        style="@style/signup_with_email"
        android:textColor="#fdfdf9"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Find a Taskbar" />


</RelativeLayout>
