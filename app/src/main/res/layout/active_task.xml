<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fafafa"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout13"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/imageView10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView10"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="91dp"
                    android:layout_marginStart="91dp"
                    android:textColor="#ff5b61"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Michael" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView43"
                    android:layout_alignStart="@+id/textView43"
                    android:layout_below="@+id/textView43"
                    android:textColor="#898989"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="for cleaning" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView43"
                    android:layout_alignStart="@+id/textView43"
                    android:layout_below="@+id/textView44"
                    android:textColor="#898989"
                    android:textSize="18dp"
                    android:text="(23 Jun - Flexible time)" />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Chat Now"
                    style="@style/done"
                    android:textColor="#f9f9f5"
                    android:textAllCaps="true"
                    android:layout_alignStart="@+id/textView45"
                    android:layout_below="@+id/textView45" />


            </RelativeLayout>
            </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView11"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="91dp"
                    android:layout_marginStart="91dp"
                    android:textColor="#ff5b61"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Zayne Malikl" />

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView46"
                    android:layout_alignStart="@+id/textView46"
                    android:layout_below="@+id/textView46"
                    android:textColor="#898989"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="for cleaning" />

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView46"
                    android:layout_alignStart="@+id/textView46"
                    android:layout_below="@+id/textView47"
                    android:textColor="#898989"
                    android:textSize="18dp"
                    android:text="(23 Jun - Flexible time)" />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Chat Now"
                    style="@style/done"
                    android:textColor="#f9f9f5"
                    android:textAllCaps="true"
                    android:layout_alignStart="@+id/textView48"
                    android:layout_below="@+id/textView48" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>


</RelativeLayout>
