<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="bottom"
    >
    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar_dai"

        layout="@layout/toolbar_dialouge"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar_dai"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
    android:orientation="vertical">
    <EditText


        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:backgroundTint="#ff6367"
        android:ems="10"
        android:hint="Enter Street Address"
        android:textColorHint="@color/hint"
        android:textStyle="bold"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:textSize="16dp"
        android:textColor="#ff6367"
        android:text="@string/task_address" />

    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:textAllCaps="false"
        style="@style/done"
        android:text="Done" />


</LinearLayout>



</RelativeLayout>
