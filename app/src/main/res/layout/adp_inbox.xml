<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:id="@+id/ll_rev1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/iv_adp_rew_pic"

            android:layout_gravity="center_vertical"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"/>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="3dp"
           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"

                android:padding="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/tv_adp_rew_name"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/round"
                    fontPath="fonts/Montserrat-Bold.ttf"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00/00"
                    android:layout_toLeftOf="@+id/tv_adp_rew_name"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_adp_rew_date"
                    fontPath="fonts/Montserrat-SemiBold"
                    android:textStyle="bold"
                    />

            </RelativeLayout>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="1"
            android:layout_weight="3"
            android:padding="2dp"
            android:gravity="center_vertical"
            android:text="Looking for..."
            fontPath="fonts/Montserrat-Regular"
            android:textColor="@color/hint"
            android:id="@+id/tv_adp_inbox_looking"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/chat"
                android:layout_weight="5"
                android:gravity="left|center_vertical"
                android:maxLines="2"
                fontPath="fonts/Montserrat-Regular"
                android:layout_toLeftOf="@+id/tv_adp_rew_name"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_adp_rew_description"
                android:textStyle="normal"
                />
        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>